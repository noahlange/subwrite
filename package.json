{
  "name": "subwrite",
  "version": "0.1.0",
  "module": "lib/subwrite.mjs",
  "main": "lib/subwrite.js",
  "scripts": {
    "dev": "npm-run-all \"dev:*\" \"test\"",
    "build": "npm-run-all \"build:*\"",
    "build:esm": "esbuild src/index.ts --minify --bundle --outfile=lib/subwrite.mjs --format=esm",
    "build:cjs": "esbuild src/index.ts --minify --bundle --outfile=lib/subwrite.js --format=cjs",
    "dev:pretty": "prettier --write 'src/**/*.{ts,tsx}'",
    "dev:types": "tsc --noEmit",
    "test": "jest"
  },
  "devDependencies": {
    "@jest/globals": "^27.5.1",
    "esbuild": "^0.16.3",
    "jest": "^28.1.3",
    "prettier": "^2.8.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.9.3",
    "npm-run-all": "^4.1.5"
  }
}
